<div class="container">
  <% @posts.each do |post| %>
  <article>
    <header>
      <h1> <%= post.title %></h1>
      <span><%=post.created_at.strftime("%Y-%m-%d") %></span>
    </header>
      <p>
        <%=post.body%>
      </p>
      <div class = "footer">
        <span><a href="/post/<%=post.id%>/edit">edit</a></span>
        <%= post.tags.pluck(:name).join(",") %>
      </div>
    </article>
  <%end%>
</div>
